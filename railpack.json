{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "steps": {
    "install": {
      "inputs": [{ "local": true, "include": ["."] }],
      "commands": ["npm ci"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["npm run build"]
    }
  },
  "deploy": {
    "startCommand": "npm start"
  }
}
